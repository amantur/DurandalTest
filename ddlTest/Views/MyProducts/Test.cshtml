<!doctype html>
<html>
    <head>
        <title>My Products List</title>
        <link type="text/css" rel="stylesheet" href="/Content/bootstrap.min.css" />
        <link type="text/css" rel="stylesheet" href="/Content/bootstrap-theme.min.css" />
        <link type="text/css" rel="stylesheet" href="/Styles/ui.jqgrid.css" />
        <link type="text/css" rel="stylesheet" href="/Content/durandal.css" />
        <link type="text/css" rel="stylesheet" href="/Content/toastr.min.css" />
    </head>
    <body>
        <div id="applicationHost" class="container">
            <div>
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="page-title" data-bind="text: title"></h4>

                        <address><span data-bind="text: results().length"></span>&nbsp;products found</address>
                    </div>
                    <div class="col-md-4 pull-right">
                        <form class="navbar-form pull-right" role="search" data-bind="submit: search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search" data-bind="value: query, valueUpdate: 'afterkeydown'">
                            </div>
                            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>&nbsp;Search</button>
                        </form>
                    </div>
                </div>
                <div class="row text-danger">
                    <span data-bind="text: query()"></span>
                    <span data-bind="text: results().length"></span>
                </div>
                <div class="row">
                    <section data-bind="foreach: results()">
                        <div class="well well-sm">
                            <div class="row">
                                <div class="col-md-6 pull-left">
                                    <label data-bind="text: Name"></label><br />
                                    <span class="text-warning" data-bind="html: Category"></span>
                                </div>
                                <div class="col-md-2 pull-right">
                                    <button class="btn btn-info btn-xs pull-right" data-bind="click: $parent.addProduct">
                                        <span class="glyphicon glyphicon-plus"></span>Add
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12" data-bind="html: Description"></div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <script src="/Scripts/jquery-2.0.3.js"></script>
        <script src="/Scripts/bootstrap.min.js"></script>
        <script src="/Scripts/knockout-2.3.0.js"></script>
        <script src="/Scripts/toastr.min.js"></script>
        <script src="/Scripts/TestModel.js"></script>
        <script type="text/javascript">
            var t = new TestModel();
            ko.applyBindings(t);
        </script>
    </body>
</html>
